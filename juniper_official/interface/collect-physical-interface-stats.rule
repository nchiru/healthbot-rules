                                    }
                                }
                                platforms MX10016 {
                                    releases 22.3R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms MX240 {
                                    releases 19.2R1 {
                                        release-support min-supported-release;
                                    }
                                }
                                platforms MX480 {
